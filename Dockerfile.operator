# Build stage for the workspace operator.
FROM golang:1.26-alpine AS builder
WORKDIR /workspace
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o manager main.go

FROM alpine:3.23
RUN apk --no-cache add ca-certificates
WORKDIR /
COPY --from=builder /workspace/manager .
ENTRYPOINT ["/manager"]
